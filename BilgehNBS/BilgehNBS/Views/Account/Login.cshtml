                            <div class="input-field col s12">
                                <label for="Password" class="active"><b>Şifrə</b></label>
                                <input asp-for="Password" class="validate" type="password">
                                <span asp-validation-for="Password"></span>
                            </div>

                        </div>

                        <div class="App_login__btn">
                            <button class="btn waves-effect waves-light w-100" type="submit" name="action">
                                Daxil ol
                                <i class="material-icons right">send</i>
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>


